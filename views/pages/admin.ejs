<!DOCTYPE html>
<html>
	<% include ../partials/header.ejs %>
		<br><br> 

<h3 style="color:red; text-align:center">ADMIN PAGE</h3>
<br>
    

<div class="container">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal" style="margin-left:44%; margin-bottom:3%;">
      Add new item
    </button>

      <% for(var i=0; i<items.length; i++) {%>
        <div class="row" style="border-bottom: 1px solid black">
            <div class="col-xs-6">
                <img src="<%= items[i].img %>" height="250vh" width="400vh">
            </div>
             <div class="col-xs-6" id="<%= items[i]._id %>">
                <form action="/edit" method="post" style="display:inline-block">
                     <input type="hidden" name="oName" value="<%= items[i].name %>">
                      Item Name: <input type="text" name="name" value="<%= items[i].name %>"><br>
                      Description: <input type="text" name="description" value="<%= items[i].description %>"><br>
                      Price: <input type="text" name="price" value="<%= items[i].price %>">
                      Unit:  <input type="text" name="unit" value="<%= items[i].unit %>">
                      Image URL: <input type="text" name="img" value="<%= items[i].img %>">
                     <p style="color:green">Confirm Changes:</p>
                    <button type="submit" class="btn btn-default btn-circle btn-xl"><i class="glyphicon glyphicon-ok"></i></button>
                </form>
                <form action="/remove" method="post" id="removeForm" style="display:inline-block; margin-left:25%; margin-top: -24%;">
                    <input type="hidden" name="name" value="<%= items[i].name %>">
                    <p style="color:red">Delete Item:</p> <button type="submit" class="btn btn-default btn-circle btn-xl"><i class="glyphicon glyphicon-remove"></i></button><br><br>
                </form>
            </div>

        </div><br>
      <% } %>

    </div>
    
    <script>
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').focus()
        });
    </script>
    
    <div class="modal fade" id="modal" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" stlye="text-align:center">Add new item</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
                <form action="/add" method="post" style="text-align:center">
                        <input type="text" placeholder="name" name="name" required><br>
                        <input type="text" placeholder="description" name="description" required><br>
                        <input type="text" placeholder="price" name="price" required><br>
                        <input type="hide" placeholder="unit (eg e/mo)" name="unit" required><br>
                        <input type="text" placeholder="Image URL" name="img"><br>
                    <button type="submit" style="width:75%">Add Item</button>
                </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


</html>