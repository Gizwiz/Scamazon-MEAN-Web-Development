<!DOCTYPE html>
<html>
	<% include ../partials/header.ejs %>
		<br><br> 

<h1>ADMIN PAGE</h1>
<br>

    

    

<div class="container">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modal" style="margin-left:44%; margin-bottom:3%;">
      Add new item
    </button>

      <% for(var i=0; i<items.length; i++) {%>
        <div class="row">
            <div class="col-xs-5">
                <img src="<%= items[i].img %>" height="250vh" width="400vh">
            </div>
             <div class="col-xs-5" id="<%= items[i]._id %>">
                <span><h2><%= items[i].name %></h2></span><br>
                <span><%= items[i].description %></span><br><br>
                <span><%= items[i].price %>&nbsp;<%= items[i].unit %></span>
            </div>
            <div class="col-xl-2">
                <br>
                <button type="button" class="btn btn-default btn-circle btn-xl"><i class="glyphicon glyphicon-pencil"></i></button><br><br>

                <form action="/remove" method="post" id="removeForm">
                        <input type="hidden" name="name" value="<%= items[i].name %>">
                        <button type="submit" class="btn btn-default btn-circle btn-xl"><i class="glyphicon glyphicon-remove"></i></button><br><br>
                </form>
                
            </div>
        </div><br>
      <% } %>

    </div>
    
    <script>
        $('#myModal').on('shown.bs.modal', function () {
            $('#myInput').focus()
        });
    </script>
    
    <div class="modal fade" id="modal" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title" stlye="text-align:center">Add new item</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
                <form action="/add" method="post" style="text-align:center">
                        <input type="text" placeholder="name" name="name" required><br>
                        <input type="text" placeholder="description" name="description" required><br>
                        <input type="text" placeholder="price" name="price" required><br>
                        <input type="hide" placeholder="unit (eg e/mo)" name="unit" required><br>
                        <input type="text" placeholder="Image URL" name="img"><br>
                    <button type="submit" style="width:75%">Add Item</button>
                </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>


</html>